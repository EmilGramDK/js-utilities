{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.validate": ["typescript"],
  "eslint.enable": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "always"
  },
  "files.associations": {
    "*.css": "tailwindcss",
    "*.scss": "tailwindcss"
  },
  "search.exclude": {
    "**/node_modules/**": true,
    "**/.git": true,
    "**/.DS_Store": true,
    "**/.turbo": true,
    "**/.next": true,
    "**/.angular": true
  }
}
